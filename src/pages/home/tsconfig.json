{
	"extends": "../../../tsconfig.app.json",
	"compilerOptions": {
		"paths": {
			// Global
			"@/components/*": ["src/components/*"],
			"@/features/*": ["src/features/*"],
			"@/contexts/*": ["src/contexts/*"],

			// Local
			"!/features/*": ["src/pages/home/features/*"],
			"!/data/*": ["src/pages/home/data/*"],
			"!/utils/*": ["src/pages/home/utils/*"],
			"!/contexts/*": ["src/pages/home/contexts/*"],
			"!/types": ["src/pages/home/types.d.ts"],

			// Other
			"builderment-classes": ["node_modules/builderment-classes/dist/browser/index.d.ts", "node_modules/builderment-classes/dist/browser/index.js"]
		}
	},
	"include": ["./"],
	"exclude": []
}